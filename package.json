{
  "name": "wt",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build --compile --minify src/cli.ts --outfile dist/wt",
    "typecheck": "tsc --noEmit",
    "install:local": "bun run build && ln -sf $(pwd)/dist/wt ~/.bun/bin/wt"
  },
  "dependencies": {
    "citty": "^0.2.0",
    "consola": "^3.4.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3"
  }
}
